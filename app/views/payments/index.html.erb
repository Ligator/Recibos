<p id="notice"><%= notice %></p>

<h1>Listing Payments</h1>

<table>
  <thead>
    <tr>
      <th>User transaction</th>
      <th>Programmed date</th>
      <th>Done date</th>
      <th>Amount</th>
      <th>Confirm payer</th>
      <th>Confirm payee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.user_transaction %></td>
        <td><%= payment.programmed_date %></td>
        <td><%= payment.done_date %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.confirm_payer %></td>
        <td><%= payment.confirm_payee %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

